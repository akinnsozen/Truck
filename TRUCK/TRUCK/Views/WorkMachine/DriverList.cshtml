@model IEnumerable<Driver>
@{
    ViewData["Title"] = "DriverList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="intro">

                    <h1 style="color:orangered">OPERATÖRLERİMİZ</h1>
                    <p class="mx-auto" style="color:orangered">
                        ALANINDA UZMAN KADRO
                    </p>
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index" style="font-size:100px">TRUCK<span class="dot">.</span></a>
                </div>
            </div>
        </div>
    </div>
    <div id="projects-slider" class="owl-theme owl-carousel">
    <div class="project">
        <div class="overlay"></div>
        <img src="~/img/worker1.jpg">
        <div class="content">
            <h2>Mutlu ve Güleryüzlü Ekip</h2>
                <h6>TRUCK, uzman ve deneyimli personelleriyle müşterilerine yüksek kalitede hizmet sunmaktadır.</h6>
        </div>
    </div>
    <div class="project">
        <div class="overlay"></div>
        <img src="~/img/worker2.jpg" alt="">
        <div class="content">
            <h2>Özveri</h2>
            <h6>
                    Şirketimizin başarısının temelinde, profesyonel ekibimizin özverili çalışması ve müşteri memnuniyetine odaklanması bulunmaktadır.
            </h6>
        </div>
    </div>
    <div class="project">
        <div class="overlay"></div>
        <img src="~/img/worker3.jpg" alt="">
        <div class="content">
                <h2>İnovasyon</h2>
            <h6>
                    Personellerimizin sektördeki güncel bilgi ve becerileriyle, TRUCK her zaman iş makineleri kiralama konusunda öncü bir marka olarak öne çıkmaktadır.
            </h6>
        </div>
    </div>
    </div>
</section>

<div class="mt-5 col-auto">
    @if (Model.Count() == 0)
    {
        <div class="alert alert-danger" role="alert">
            Boşta Operatör bulunmamaktadır
        </div>
    }
    else
    {
        <div class="table-container">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Operatör Adı Soyadı</th>
                    <th scope="col">Deneyim</th>
                    <th scope="col">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.ID</th>
                        <td>@item.DriverName<text> </text> @item.DriverSurname</td>
                        <td>@item.Deneyim</td>
                        <td><a style="color:black" class="btn btn-brand" asp-controller="Rent" asp-action="Index">İş aracı başvuru</a></td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    }
</div>
<script src="~/js/jquery.min.js"></script>
<script src="~/js/bootstrap.bundle.min.js"></script>
<script src="~/js/owl.carousel.min.js"></script>
<script src="~/js/app.js"></script>

