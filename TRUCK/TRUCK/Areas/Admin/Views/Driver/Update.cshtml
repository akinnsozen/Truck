@model Driver
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="intro">
                <h1 style="color:orangered">OPERATÖR GÜNCELLEME SAYFASI</h1>
            </div>
        </div>
    </div>
</div>


@if (ViewBag.UpdateError != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.UpdateError
    </div>
}
else
{
    <div class="container">
        <div class="rounded" style="float: right;">
            <a class="navbar-brand" asp-controller="WorkMachine" asp-action="Index" style="font-size:100px">TRUCK<span class="dot">.</span></a>
        </div>
    </div>
    <div class="container">
        <form asp-area="Admin" asp-controller="Driver" asp-action="Update" method="post">


            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Operatör Adı</label>
                    <input type="text" class="form-control" asp-for=DriverName value="@Model.DriverName" placeholder="Operatör Adı">
                </div>
                <div class="form-group col-md-6">
                    <label>Operatör Soyadı</label>
                    <input type="text" class="form-control" asp-for=DriverSurname value="@Model.DriverSurname" placeholder="Operatör Soyadı">
                </div>
                <div class="form-group col-md-6">
                    <label>Deneyim</label>
                    <input type="text" class="form-control" asp-for=Deneyim value="@Model.Deneyim" placeholder="Deneyim">
                </div><br>
                <input type="submit" value="Güncelle" class="btn btn-brand" />
                <a asp-area="Admin" asp-controller="Driver" asp-action="DriverList" class="btn btn-brand">Vazgeç</a>
            </div>
        </form>
    </div>
}

